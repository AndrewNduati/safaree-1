<h1>New Activity</h1>

<%= form_for :activity, url: activities_path do |f| %>
	<p>
		<%= f.label :title %><br>
    <%= f.text_field :title, :required =>true, class: 'form-control' %><br>
    <%= f.label :start_time %><br>
    <%= f.time_field :start_time, :required =>true, class: 'form-control' %><br>
    <%= f.label :end_time %><br>
    <%= f.time_field :end_time, :required =>true, class: 'form-control' %><br>
    <%= f.label :picture_one %><br>
    <%= f.text_field :pic1_url, :required =>true, class: 'form-control' %><br>
    <%= f.label :picture_two %><br>
    <%= f.text_field :pic2_url, :required =>true, class: 'form-control' %><br>
    <%= f.label :picture_three %><br>
    <%= f.text_field :pic3_url, :required =>true, class: 'form-control' %><br>
    <%= f.label :date %><br>
    <%= f.date_field :date, :required =>true, class: 'form-control' %><br>
    <%= f.label :price %><br>
    <%= f.number_field :price, :required =>true, class: 'form-control' %><br>
    
	</p>
	<p>
	
		<%= render 'form', activity: @activity %>
	</p>
	<% end %>

<%= link_to 'Back', activities_path %>
