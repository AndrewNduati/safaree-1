<p id="notice"><%= notice %></p>
<h1>New Activity</h1>

<%= form_for :activity, multipart: true, data: {'abide' => true}, url: experience_activities_path do |f| %>
	<p>
		<%= f.label :title %><br>
    <%= f.text_field :title, :required =>true, class: 'form-control' %><br>
    <%= f.label :start_time %><br>
    <%= f.time_field :start_time, :required =>true, class: 'form-control' %><br>
    <%= f.label :end_time %><br>
    <%= f.time_field :end_time, :required =>true, class: 'form-control' %><br>
    <%= f.label :pictures %><br>
    <%= f.file_field :pictures, :required =>true, multiple: true, class: 'form-control' %><br>
    <%= f.label :date %><br>
    <%= f.date_field :date, :required =>true, class: 'form-control' %><br>
    <%= f.label :price %><br>
    <%= f.number_field :price, :required =>true, class: 'form-control' %><br>
    
	</p>
	<p>
	
		<%= f.submit "Create Activity",class: 'btn btn-primary' %>
	</p>
	<% end %>

<%= link_to 'Back', experience_activities_path %>
