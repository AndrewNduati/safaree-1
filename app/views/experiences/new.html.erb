<h1>New Experience</h1>


    <%= form_for :experience, url: experiences_path do |f| %>
	<p>
	<%= f.label :title %><br>
    <%= f.text_field :title, :required =>true, class: 'form-control' %><br>
    
    <%= f.label :tagline%><br>
    <%= f.text_field :tagline, :required =>true, class: 'form-control' %><br>
    
    <%= f.label :poster_url %><br>
    <%= f.file_field :poster_url, :required =>true, class: 'form-control' %><br>
    
    <%= f.label :provided %><br>
    <%= f.text_area :provided, :required =>true, class: 'form-control' %><br>
   
    <%= f.label :notes %><br>
    <%= f.text_area :notes, :required =>true, class: 'form-control' %><br>
   
    <%= f.label :deadline %><br>
    <%= f.date_field :deadline, :required =>true, class: 'form-control' %><br>
   
    <%= f.label :Description %><br>
    <%= f.text_area :description, :required =>true, class: 'form-control' %><br>
    

    </p>
	<p>
		<%= render 'form', experience: @experience %>
        
	</p>
	<% end %>


<%= link_to 'Back', experiences_path %>
