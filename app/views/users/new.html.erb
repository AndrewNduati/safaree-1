<div class="wrapper container">
<div class = "row">
    <div class="col-md-3">
    <span></span>
    </div>
    <div class="col-md-6"> 
    <h1>Sign-up</h1>
<!-- url: merchants_path  maps to merchants#create method  -->
    <%= form_for :user, url: users_path do |f| %>
	<p>
		<%= f.label :name %><br>
    <%= f.text_field :name, :required =>true, class: 'form-control' %><br>
    <%= f.label :email %><br>
    <%= f.text_field :email, :required =>true, class: 'form-control' %><br>
    <%= f.label :Birthday %><br>
    <%= f.date_field :birthday, :required =>true, class: 'form-control' %><br>
    <%= f.label :Telephone_number %><br>
    <%= f.text_field :telephone, :required =>true, class: 'form-control' %><br>
    <%= f.label :Country %><br>
    <%= f.text_field :Country, :required =>true, class: 'form-control' %><br>
    <%= f.label :City %><br>
    <%= f.text_field :city, :required =>true, class: 'form-control' %><br>
    <%= f.label :Description %><br>
    <%= f.text_field :description, :required =>true, class: 'form-control' %><br>
    <%= f.label :Education %><br>
    <%= f.text_field :education, :required =>true, class: 'form-control' %><br>
    
	</p>
	<p>
		<%= f.submit "Sign Up", class: "btn btn-primary" %>
        
	</p>
	<% end %>
    </div><%= link_to 'Back', users_path %>
