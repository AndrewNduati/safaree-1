<p id="notice"><%= notice %></p>
<h1>New Booking</h1>

<%= form_for :booking, :url=>{:action => "create"}, method: :post do |f| %>
	<p>
	<%= f.label :experience %><br>
    <%= f.text_field :experience_id, :value => (params[:experience_id]), :required =>true, class: 'form-control' %><br>
    <%= f.label :user %><br>
    <%= f.text_field :user_id, :value => (params[:user_id]), :required =>true, class: 'form-control' %><br>
    <%= f.label :date %><br>
    <%= f.date_field :trip_date, :required =>true, class: 'form-control' %><br>
    
	</p>
	<p>
	<%= render 'form', booking: @booking %>
		
	</p>
	<% end %>



<%= link_to 'Back', bookings_path %>
